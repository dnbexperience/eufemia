{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "module": "es2022",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": ["es2022", "dom"],
    "types": ["node", "jest"],
    "outDir": "./out",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "Pages/*": ["./src/docs/*"]
    }
  },
  "exclude": ["node_modules", ".cache", "public"]
}
