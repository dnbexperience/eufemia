{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": ["es2018", "dom"],
    "types": ["node", "jest"],
    "outDir": "./build",
    "rootDir": ".",
    "baseUrl": ".",
    "noErrorTruncation":true,
  },
  "exclude": ["node_modules", "build"]
}
